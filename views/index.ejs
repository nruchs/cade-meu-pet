<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <%- include("partials/header") %>
    </header>

    <main>
        <form action="/animais/busca" method="GET" class="busca-avancada">
            <h2>Busca Avançada</h2>
            <label>Raça:
                <input type="text" name="raca" placeholder="Raça do animal">
            </label>
            <label>Idade:
                <input type="number" name="idade" placeholder="Idade (em anos)">
            </label>
            <label>Status:
                <select name="status">
                    <option value="">Selecione</option>
                    <option value="perdido">Perdido</option>
                    <option value="encontrado">Encontrado</option>
                    <option value="encontrado">Adoção</option>
                </select>
            </label>
            <label>Localização:
                <input type="text" name="localizacao" placeholder="Cidade ou Bairro">
            </label>
            <button type="submit">Buscar</button>
        </form>

        <h2>Animais Perdidos</h2>
        <div id="animais-lista">
            <% animais.forEach(animal => { %>
                <div class="animal-card">
                    <% if (animal.Foto) { %>
                        <img src="<%= animal.Foto %>" alt="<%= animal.Nome %>" width="100" height="100">
                    <% } %>
                    <h3><%= animal.Nome %></h3>
                    <p>Idade: <%= animal.Idade %> anos</p>
                    <p>Raça: <%= animal.Raca %></p>
                    <p>Status: <%= animal.Status %></p>
                    <p>Localização: <%= animal.Localizacao %></p>
                    <a href="/animais/detalhes/<%= animal.AnimalID %>">Ver Detalhes</a>
                </div>
            <% }) %>
        </div>
    </main>

    <script src="/script.js"></script>
</body>
</html>
