<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1><%= titulo %></h1>
        <nav>
            <a href="/">Home</a>
            <a href="/cadastrar">Cadastrar Animal</a>
        </nav>
    </header>

    <main>
        <h2>Animais Perdidos</h2>
        <div id="animais-lista">
            <% animais.forEach(animal => { %>
                <div class="animal-card">
                    <h3><%= animal.Nome %></h3>
                    <p>Idade: <%= animal.Idade %> anos</p>
                    <p>Raça: <%= animal.Raca %></p>
                    <p>Status: <%= animal.Status %></p>
                    <p>Localização: <%= animal.Localizacao %></p>
                    <a href="/animais/detalhes/<%= animal.AnimalID %>">Ver Detalhes</a>
                </div>
            <% }) %>
        </div>
    </main>

    <script src="/script.js"></script>
</body>
</html>
