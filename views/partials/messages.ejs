<% if (mensagemSucesso) { %>
    <div class="alert alert-success" id="mensagem-feedback"><%= mensagemSucesso %></div>
    <script>
        setTimeout(() => {
            const mensagemFeedback = document.getElementById("mensagem-feedback");
            if (mensagemFeedback) {
                mensagemFeedback.style.display = "none";
            }
        }, 3000);
    </script>
<% } %>
<% if (mensagemErro) { %>
    <div class="alert alert-danger" id="mensagem-feedback"><%= mensagemErro %></div>
    <script>
        setTimeout(() => {
            const mensagemFeedback = document.getElementById("mensagem-feedback");
            if (mensagemFeedback) {
                mensagemFeedback.style.display = "none";
            }
        }, 3000);
    </script>
<% } %>
