<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title><%= titulo %></title>
</head>
<body>
    <header>
        <h1>Resultados da Busca</h1>
        <a href="/">Voltar à Página Inicial</a>
    </header>
    <main>
        <% if (animais.length > 0) { %>
            <% animais.forEach(animal => { %>
                <div class="animal-card">
                    <h3><%= animal.Nome %></h3>
                    <p>Raça: <%= animal.Raca %></p>
                    <p>Idade: <%= animal.Idade %> anos</p>
                    <p>Status: <%= animal.Status %></p>
                    <p>Localização: <%= animal.Localizacao %></p>
                    <a href="/animais/detalhes/<%= animal.AnimalID %>">Ver Detalhes</a>
                </div>
            <% }) %>
        <% } else { %>
            <p>Nenhum animal encontrado com os critérios de busca.</p>
        <% } %>
    </main>
</body>
</html>
