<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <%- include("partials/header") %>
    </header>
    <%- include("partials/messages") %>
    <main>
        <div class="container">
        <h2>Bem-vindo, <%= usuario.Nome %>!</h2>

        <h2>Animais Cadastrados</h2>
        <div id="animais-lista">
        <% if (animais.length > 0) { %>
            <% animais.forEach(animal => { %>
                <div class="animal-card">
                    <% if (animal.Foto) { %>
                        <img src="<%= animal.Foto %>" alt="<%= animal.Nome %>" width="100" height="100">
                    <% } %>
                    <h3><%= animal.Nome %></h3>
                    <p>Idade: <%= animal.Idade %> anos</p>
                    <p>Raça: <%= animal.Raca %></p>
                    <p>Status: <%= animal.Status %></p>
                    <p>Localização: <%= animal.Localizacao %></p>
                    <a href="/animais/detalhes/<%= animal.AnimalID %>">Ver Detalhes</a>
                    <a href="/animais/editar/<%= animal.AnimalID %>">Editar</a>
                    <button onclick="excluirAnimal(<%= animal.AnimalID %>)">Excluir</button>
                </div>
            <% }) %>
        <% } else { %>
            <p>Você não cadastrou nenhum animal.</p>
        <% } %>
    </div>
        
    <div class="form-container">
        <!-- Formulário para atualizar perfil -->
        <h2>Atualizar Perfil</h2>
        <form action="/usuarios/perfil" method="POST">
            <label>Nome: <input type="text" name="nome" value="<%= usuario.Nome %>" required></label><br>
            <label>Email: <input type="email" name="email" value="<%= usuario.Email %>" required></label><br>
            <label>Nova Senha: <input type="password" name="senha"></label><br>
            <button type="submit">Salvar Alterações</button>
        </form>
    </div>
    </div>
    </main>
    <script src="/js/script.js"></script>
</body>
</html>
